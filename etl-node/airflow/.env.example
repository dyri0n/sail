# =============================================================================
# CONFIGURACIÓN DE ENTORNO - AIRFLOW ETL NODE
# =============================================================================
# Copia este archivo a .env y ajusta los valores según tu entorno.
# NUNCA commitees el archivo .env con credenciales reales.
# =============================================================================

# -----------------------------------------------------------------------------
# AIRFLOW - Configuración interna
# -----------------------------------------------------------------------------
AIRFLOW_ADMIN_USERNAME=admin
AIRFLOW_ADMIN_PASSWORD=admin
AIRFLOW_UID=50000

# -----------------------------------------------------------------------------
# CONNECTION IDs - Referencias a conexiones en Airflow Admin
# -----------------------------------------------------------------------------
AIRFLOW_DWH_CONN_ID=dwh_postgres_conn
AIRFLOW_STAGING_CONN_ID=staging_postgres_conn

# -----------------------------------------------------------------------------
# DATA WAREHOUSE - Conexión directa (para scripts Python en DockerOperator)
# -----------------------------------------------------------------------------
DWH_HOST=dwh-postgres
DWH_PORT=5432
DWH_USER=dwh_user
DWH_PASSWORD=dwh_password_seguro
DWH_DATABASE=datawarehouse

# -----------------------------------------------------------------------------
# STAGING DATABASE - Base de datos intermedia
# -----------------------------------------------------------------------------
STAGING_HOST=staging-postgres
STAGING_PORT=5432
STAGING_USER=staging_user
STAGING_PASSWORD=staging_password_seguro
STAGING_DATABASE=staging

# -----------------------------------------------------------------------------
# ETL WORKERS - Configuración de contenedores remotos
# -----------------------------------------------------------------------------
ETL_WORKER_IMAGE=mi-sistema/etl-worker:latest

# URL del Docker daemon del nodo worker
# - Para mismo host: unix://var/run/docker.sock
# - Para host remoto: tcp://192.168.1.100:2375
DOCKER_WORKER_URL=unix://var/run/docker.sock

# Network mode: 'bridge' o 'host'
DOCKER_NETWORK_MODE=bridge

# Límites de recursos
WORKER_MEM_LIMIT=4g
WORKER_CPUS=2.0

# -----------------------------------------------------------------------------
# RUTAS DE DATOS
# -----------------------------------------------------------------------------
DATA_MOUNT_SOURCE=/data/etl
DATA_MOUNT_TARGET=/app/data
